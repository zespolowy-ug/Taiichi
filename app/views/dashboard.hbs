{{#section 'styles'}}
    <link href="/public/assets/css/dashboard.css" rel="stylesheet">
{{/section}}
{{> header}}



<div class="main-container">
    <div class="tables-list">
        <div class="tables-list__header">Lista tablic</div>
        <div class="tables-list__content">

        </div>
    </div>
</div>

<!-- The Modal -->
<div class="modal fade" id="modal-add-project">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">Dodawanie projektu</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label for="project-name">Nazwa projektu</label>
                    <input type="text" class="form-control" id="project-name-add" placeholder="Nazwa projektu">
                
              </div>
                <label for="color-select">Wybierz kolor</label>
                <select class="form-control" id="color-select-add">
                  <option value="blue">Niebieski</option>
                  <option value="red">Czerwony</option>
                  <option value="yellow">Żółty</option>
                  <option value="orange">Pomarańczowy</option>
                  <option value="purple">Fioletowy</option>
                  <option value="brown">Brązowy</option>
                </select>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal">Anuluj</button>
                <button type="button" class="btn btn-primary" data-function="save-new-project">Dodaj</button>
            </div>

        </div>
    </div>
</div>

<!-- The Modal -->
<div class="modal fade" id="modal-edit-project">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">Edycja projektu</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label for="project-name">Nazwa projektu</label>
                    <input type="text" class="form-control" id="project-name-edit" placeholder="Nazwa projektu">
              </div>
                <label for="color-select">Wybierz kolor</label>
                <select class="form-control" id="color-select-edit">
                  <option value="blue">Niebieski</option>
                  <option value="red">Czerwony</option>
                  <option value="yellow">Żółty</option>
                  <option value="orange">Pomarańczowy</option>
                  <option value="purple">Fioletowy</option>
                  <option value="brown">Brązowy</option>
                </select>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal">Anuluj</button>
                <button type="button" class="btn btn-primary" data-function="save-project">Zapisz</button>
            </div>

        </div>
    </div>
</div>

<!-- The Modal -->
<div class="modal fade" id="modal-confirm-delete">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Potwierdź usunięcie</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                Czy na pewno chcesz usunąć ten projekt?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal">Nie</button>
                <button type="button" class="btn btn-primary" data-function="confirm-delete-button">Tak</button>
            </div>

        </div>
    </div>
</div>

<script src="/public/assets/js/Dashboard/projectAdd.js"></script>
<script src="/public/assets/js/Dashboard/projectEdit.js"></script>
<script src="/public/assets/js/Dashboard/dashboard.js"></script>
